<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="8"
    android:rowCount="18"
    android:columnOrderPreserved="true"
    android:layout_margin="2sp"
    android:rowOrderPreserved="true"
    android:useDefaultMargins="false"
    android:gravity="center"
    android:alignmentMode="alignMargins">

    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:text="First: *"
        android:id="@+id/firstNameView"
        />
    <EditText
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="7"
        android:inputType="textPersonName"
        android:id="@+id/firstName"
        android:hint="Name..."
        android:maxLength="25"/>


    <TextView
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:text="Last: *"
        android:id="@+id/lastNameView"
        />
    <EditText
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="7"
        android:hint="Name..."
        android:inputType="textPersonName"
        android:id="@+id/lastName"
        android:maxLength="50"/>


    <TextView
        android:layout_row="2"
        android:layout_column="0"
        android:text="Email: *"
        android:id="@+id/emailView"
        />
    <EditText
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="7"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:maxLength="75"/>


    <TextView
        android:layout_row="3"
        android:layout_column="0"
        android:text="Phone Number: *"
        android:id="@+id/phoneView"/>
    <EditText
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:hint="(e.g. 2531234567) "
        android:inputType="number"
        android:id="@+id/phone"
        android:maxLength="10"/>


    <TextView
        android:layout_row="3"
        android:layout_column="3"
        android:text="Student Id: "
        android:id="@+id/sidView"/>
    <EditText
        android:layout_row="3"
        android:layout_column="4"
        android:hint="(e.g. 844555555)"
        android:inputType="phone"
        android:id="@+id/sid"
        android:maxLength="9"/>


    <CheckBox
        android:layout_row="4"
        android:layout_column="0"
        android:text="Slow Performance "
        android:id="@+id/slowBox"/>


    <CheckBox
        android:layout_row="4"
        android:layout_column="1"
        android:text="Malware/Virus "
        android:id="@+id/malwareBox"/>

    <CheckBox
        android:layout_row="4"
        android:layout_column="2"
        android:text="Hardware Issue "
        android:id="@+id/hardwareBox"/>


    <CheckBox
        android:layout_row="4"
        android:layout_column="3"
        android:text="Software "
        android:id="@+id/softwareBox"/>

    <CheckBox
        android:layout_row="4"
        android:layout_column="4"
        android:text="Other"
        android:id="@+id/otherBox"/>

    <EditText
        android:id="@+id/issue"
        android:paddingTop="15sp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_rowSpan="3"
        android:inputType="textCapSentences|textAutoCorrect"
        android:hint="Please describe the issue you are having..."
        android:maxLength="500"
        />

    <Button
        android:layout_row="17"
        android:layout_column="0"
        android:layout_columnSpan="7"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/nextButton"
        android:background="#00CF00"
        android:text="NEXT"
        android:textColor="#FFFFFF"/>

</GridLayout>